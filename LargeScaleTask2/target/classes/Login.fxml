<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.resources.LoginController">
   <bottom>
      <AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="background" stylesheets="@css/DarkTheme.css" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="349.0" layoutY="154.0" style="-fx-font-size: 23;" text="Username:" />
            <TextField fx:id="usernameField" layoutX="275.0" layoutY="201.0" prefHeight="30.0" prefWidth="250.0" promptText="Insert your username" />
            <Label layoutX="352.0" layoutY="283.0" style="-fx-font-size: 23;" text="Password:" />
            <Button fx:id="loginBtn" layoutX="355.0" layoutY="382.0" mnemonicParsing="false" onAction="#loginAction" prefHeight="30.0" prefWidth="90.0" text="Log in" textAlignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Label fx:id="registerLink" layoutX="337.0" layoutY="434.0" onMouseClicked="#loadRegisterPage" text="Click here to register.">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Label>
            <PasswordField fx:id="passwordField" layoutX="275.0" layoutY="324.0" prefHeight="30.0" prefWidth="250.0" promptText="Insert your password" />
            <Label fx:id="errorLabel" alignment="CENTER" layoutX="319.0" layoutY="508.0" style="-fx-text-fill: #ff0400;" text="Hidden Error Message" textAlignment="CENTER" visible="false" wrapText="true" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
