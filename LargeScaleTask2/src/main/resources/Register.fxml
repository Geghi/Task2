<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.resources.RegisterController">
   <bottom>
      <AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="background" stylesheets="@css/DarkTheme.css" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="372.0" layoutY="53.0" style="-fx-font-size: 20;" text="Name:" />
            <TextField fx:id="nameField" layoutX="250.0" layoutY="83.0" prefHeight="25.0" prefWidth="300.0" promptText="Insert your name..." />
            <Label layoutX="379.0" layoutY="132.0" style="-fx-font-size: 20;" text="User:" />
            <TextField fx:id="userField" layoutX="250.0" layoutY="162.0" prefHeight="25.0" prefWidth="300.0" promptText="Insert your username" />
            <Label layoutX="358.0" layoutY="218.0" style="-fx-font-size: 20;" text="Password:" />
            <Label layoutX="322.0" layoutY="293.0" style="-fx-font-size: 20;" text="Confirm Password:" />
            <Label layoutX="364.0" layoutY="370.0" style="-fx-font-size: 20;" text="Country:" />
            <TextField fx:id="countryField" layoutX="250.0" layoutY="400.0" prefHeight="25.0" prefWidth="300.0" promptText="Insert your country" />
            <Button fx:id="registerBtn" layoutX="355.0" layoutY="441.0" mnemonicParsing="false" onAction="#registerAction" prefHeight="30.0" prefWidth="90.0" text="Register">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Button>
            <Label fx:id="loginLink" layoutX="282.0" layoutY="495.0" onMouseClicked="#loadLoginPage" text="Already registered? Click here to log in.">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Label>
            <PasswordField fx:id="passwordField" layoutX="250.0" layoutY="248.0" prefHeight="25.0" prefWidth="300.0" promptText="Insert your password" />
            <PasswordField fx:id="confirmField" layoutX="250.0" layoutY="323.0" prefHeight="25.0" prefWidth="300.0" promptText="Confirm your password" />
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
